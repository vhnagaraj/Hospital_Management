    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
      <style>
        body {
            background-image:url("resources/image/qw.jpg");
            background-repeat:no-repeat;
            background-size:cover;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left; /* Center the text inside the container */
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        .login-button-container {
            text-align: center;
        }

        button {
            background-color: #4caf50;
            color: #ffffff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: inline-block; /* Make it an inline-block element to center only the button */
        }
    </style>
</head>
<body>
<form action="loginuser" method="post">
<c:if test="${not empty msg}">
    <h5 class="alert alert-danger" role="alert" style="background-color: green; color: white;">
        ${msg}
    </h5>
    <c:remove var="msg"/>
</c:if>

<div class="login-container">

    <h2 style="text-align: center;">Login</h2>
    

    
    
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <div class="login-button-container">
        <button type="submit">Login</button>
    </div>
     <a class="nav-link"   href="home" >Back</a>
</div>
</form>
</body>
